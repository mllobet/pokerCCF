<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".CCFUIController" >


    
    <Button
        android:id="@+id/discoveryButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/discoveryButton" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/card_image_left"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:contentDescription="@string/card_image_left"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/card_image_right"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.00"
            android:contentDescription="@string/card_image_right"
            android:src="@drawable/card_back" />
        
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/checkButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/check" />

            <Button
                android:id="@+id/callButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/call" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/betButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/bet" />

            <Button
                android:id="@+id/allinButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/allin" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/raiseButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/raise" />

            <Button
                android:id="@+id/foldButton"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/fold" />
        </TableRow>
    </TableLayout>

</LinearLayout>