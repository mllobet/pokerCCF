    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/blue"
    android:gravity="center"
    android:orientation="vertical" >
    

    <TextView
        android:id="@+id/cloud_signing_in_title"
        android:text="@string/cloud_signing_in_title"
        style="@style/HeaderTextStyle" />
        

    <ProgressBar
        android:id="@+id/cloud_signing_in_circular_progress_bar"
        android:layout_marginTop="30dp"
        style="@style/CircularProgressBarStyle" />

    <TextView
        android:id="@+id/cloud_progress_label"
        android:text="@string/general_wait"
        android:layout_marginTop="20dp"
        style="@style/MainMessageTextStyle" />
        
